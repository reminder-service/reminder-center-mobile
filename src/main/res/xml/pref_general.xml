<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
            android:key="api_uri"
            android:title="@string/pref_title_api_uri"
            android:defaultValue="@string/pref_default_display_name"
            android:selectAllOnFocus="true"
            android:inputType="textUri"
            android:capitalize="none"
            android:singleLine="true"
            android:maxLines="1" android:textColor="@android:color/black"/>

    <EditTextPreference
            android:key="api_username"
            android:title="@string/pref_title_api_username"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:capitalize="none"
            android:singleLine="true"
            android:maxLines="1" android:textColor="@android:color/black"/>

    <EditTextPreference
            android:key="api_password"
            android:title="@string/pref_title_api_password"
            android:selectAllOnFocus="true"
            android:inputType="textPassword"
            android:capitalize="none"
            android:password="true"
            android:singleLine="true"
            android:maxLines="1" android:textColor="@android:color/black"/>

</PreferenceScreen>
